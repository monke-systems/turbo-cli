{{#if isNestProject}}
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "incremental": true,
    "skipLibCheck": true
  }
}
{{else}}
{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./{{#if isPackage}}lib{{else}}dist{{/if}}",
    "strict": true,
    "esModuleInterop": false, // enable if you having problems with compilation
    "skipLibCheck": false,  // enable if you having problems with compilation
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"{{#if withTests}}, "jest"{{/if}}]
  },
  "include": ["src/**/*.ts"{{#if withTests}}, "tests/**/*.ts"{{/if}}],
  "exclude": ["node_modules"]
}
{{/if}}
