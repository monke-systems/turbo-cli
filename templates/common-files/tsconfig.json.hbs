{{#if isNestProject}}
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@app/logger": [
        "libs/logger/src"
      ],
      "@app/logger/*": [
        "libs/logger/src/*"
      ]
    }
  }
}
{{else}}
{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./{{#if isPackage}}lib{{else}}dist{{/if}}",
    "strict": true,
    "esModuleInterop": false, // enable if you having problems with compilation
    "skipLibCheck": false,  // enable if you having problems with compilation
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"{{#if withTests}}, "jest"{{/if}}]
  },
  "include": ["src/**/*.ts"{{#if withTests}}, "tests/**/*.ts"{{/if}}],
  "exclude": ["node_modules"]
}
{{/if}}
