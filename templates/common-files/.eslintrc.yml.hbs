root: true
parserOptions:
  project: tsconfig.json
  sourceType: module
env:
  node: true
  {{#if withTests}}
  jest: true
  {{/if}}
extends:
  - '@monkee/eslint-config/typescript'
{{#if isNestProject}}
root: true
parserOptions:
  project: tsconfig.json
  sourceType: module
env:
  node: true
  jest: true
extends:
  - '@monkee/eslint-config/typescript'
rules:
  'no-console': error
overrides:
  - files: ['migrations/**/*.ts']
    rules:
      '@typescript-eslint/naming-convention': 0
      'import/no-default-export': 0
  - files: ['dev-scripts/**/*.ts']
    rules:
      'no-console': 0
settings:
  import/resolver:
    typescript:
      project: './tsconfig.json'
{{/if}}
